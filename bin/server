#!/bin/bash

set -e

start() {
    systemctl start acm@${SERVICE}
}

stop() {
    systemctl stop acm@${SERVICE}
}

restart() {
    systemctl restart acm@${SERVICE}
}

pull() {
    docker-compose -f /srv/acm/${SERVICE}.yml pull
}

update() {
    pull
    restart
    clean
}

clean() {
    if [[ -n $(docker images -f dangling=true -q) ]]; then
        docker rmi $(docker images -f dangling=true -q)
    fi
}

error() {
    echo $1 1>&2
    exit 1
}

logs() {
    docker-compose -f /srv/acm/${SERVICE}.yml logs
}


key="$2"
SERVICE="$1"

HELPTEXT="You must specify $0 <service-name> <start|stop|restart|pull|update>"

if [[ $EUID -ne 0 ]]; then
    error "This script must be run as root"
fi

if [[ $1 == "" ]]; then
    error "${HELPTEXT}"
fi

if [[ $2 == "" ]]; then
    error "${HELPTEXT}"
fi


case $key in

    start)
    start
    exit 0
    ;;

    restart)
    restart
    exit 0
    ;;

    stop)
    stop
    exit 0
    ;;

    pull)
    pull
    exit 0
    ;;

    update)
    update
    exit 0
    ;;

    clean)
    clean
    exit 0
    ;;

    logs)
    logs
    exit 0
    ;;

    *)
    error "${HELPTEXT}"
    ;;
esac


